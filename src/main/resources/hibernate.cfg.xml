<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.default_schema">sda</property>
        <property name="hibernate.dialect">
            org.hibernate.dialect.H2Dialect
        </property>
        <property name="hibernate.connection.driver_class">
            org.h2.Driver
        </property>

        <!-- początkowey skrypt inicjalizujący bazę danych  -->
        <property name="hibernate.connection.url">
            jdbc:h2:mem:test1;INIT=RUNSCRIPT FROM 'classpath:sda.sql'
        </property>
        <property name="hibernate.connection.username">
            sa
        </property>
        <property name="hibernate.connection.password">
        </property>
        <property name="connection.autocommit">
            false
        </property>
        <!-- chcesz zobaczyć co się dzieje w bazie danych polecenia itd  -->
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">true</property>
        <!-- gdy jakąś inną nazwę kolumny użyłeś od tej która została zainicjalizowana validate to sprawdzi  -->
        <property name="hbm2ddl.auto">validate</property>
        <!--<property name="hbm2ddl.auto">create</property>-->
        <!--<property name="hbm2ddl.auto">update</property>-->
        <!-- może działać bez mappingu ale dokumentacja wymaga mappingu.  -->
        <mapping class="pl.sda.domain.Department"/>
        <mapping class="pl.sda.domain.Employee"/>
    </session-factory>
</hibernate-configuration>